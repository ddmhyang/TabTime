<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TabTime"
        x:Class="TabTime.BulkEditLogsWindow"
        Title="기록 일괄 수정" Width="300" Height="250"
        WindowStartupLocation="CenterOwner" CanResize="False">

    <StackPanel Margin="20" Spacing="20">
        <TextBlock Text="선택한 기록을 어떻게 할까요?" FontWeight="Bold" HorizontalAlignment="Center"/>

        <RadioButton Name="ChangeTaskRadio" Content="다른 과목으로 변경" IsChecked="True"/>
        <ComboBox Name="TaskComboBox" HorizontalAlignment="Stretch" IsEnabled="{Binding #ChangeTaskRadio.IsChecked}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Text}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <RadioButton Name="DeleteRadio" Content="기록 삭제"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
            <Button Content="확인" Background="{StaticResource AccentColorBrush}" Foreground="White" Click="OkButton_Click"/>
            <Button Content="취소" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>